/ ==================== SCREEN 3: MANAGEMENT - STUDENTS ====================
#screen-management.screen.w-full.h-full.bg-slate-900.flex.flex-col
  / Header
  %header.bg-slate-800.border-b.border-slate-700.px-6.py-4
    .flex.items-center.justify-between
      .flex.items-center.gap-4
        = link_to root_path, class: "focus-outline p-2 hover:bg-slate-700 rounded-lg transition" do
          %svg.w-6.h-6.text-slate-300{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
            %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                   d: "M10 19l-7-7m0 0l7-7m-7 7h18" }
        %div
          %h1#management-title.text-lg.font-bold.text-amber-300
            Quản lý học viên
          %p.text-xs.text-slate-400
            Tìm kiếm, xem chi tiết, cập nhật thông tin

      .flex.items-center.gap-2
        = link_to import_students_path,
                  class: "focus-outline px-4 py-2 bg-slate-700 hover:bg-slate-600 text-slate-200 rounded-lg text-sm transition flex items-center gap-2" do
          %svg.w-5.h-5{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
            %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                   d: "M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5m0 0l5-5m-5 5V4" }
          %span#btn-import-label Nhập từ file

        = link_to new_student_path,
                  class: "focus-outline px-4 py-2 bg-amber-400 hover:bg-amber-300 text-slate-900 font-semibold rounded-lg transition flex items-center gap-2" do
          %svg.w-5.h-5{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
            %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                   d: "M12 4v16m8-8H4" }
          %span#btn-add-label Thêm mới

  / Main Content
  %main.flex-1.overflow-auto.p-6
    .max-w-7xl.mx-auto
      - if flash[:notice]
        -# .mb-4.rounded-lg.bg-emerald-50/5.border.border-emerald-500/40.text-emerald-200.py-2.px-3.text-sm
        %div{ class: "mb-4 rounded-lg bg-emerald-50/5 border border-emerald-500/40 text-emerald-200 py-2 px-3 text-sm" }
          = flash[:notice]
      - if flash[:alert]
        -# .mb-4.rounded-lg.bg-rose-50/5.border.border-rose-500/40.text-rose-200.py-2.px-3.text-sm
        %div{ class: "mb-4 rounded-lg bg-rose-50/5 border border-rose-500/40 text-rose-200 py-2 px-3 text-sm" }
          = flash[:alert]

      / Search & Filter
      .bg-slate-800.border.border-slate-700.rounded-xl.p-4.mb-6.flex.items-center.gap-4
        .flex-1
          .relative
            %svg{ class: "absolute left-3 top-1/2 transform -translate-y-1/2 w-5 h-5 text-slate-400", fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
              %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                     d: "M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" }
            = form_with url: students_path, method: :get, local: true do |f|
              = f.text_field :q,
                             value: @q,
                             placeholder: "Tìm kiếm mã SV, họ tên...",
                             class: "focus-outline w-full pl-10 pr-4 py-2 bg-slate-900/70 border border-slate-700 rounded-lg text-slate-100 placeholder-slate-500 focus:border-amber-400 transition"
        = link_to "Đặt lại",
                  students_path,
                  class: "focus-outline px-4 py-2 bg-slate-700 hover:bg-slate-600 text-slate-200 rounded-lg transition"

      / Data Table
      .bg-slate-800.border.border-slate-700.rounded-xl.overflow-hidden
        .overflow-x-auto.table-scroll
          %table.w-full#data-table
            %thead{ class: "bg-slate-900/80" }
              %tr#table-header
                %th.px-4.py-3.text-left.text-xs.font-semibold.text-slate-300.border-b.border-slate-700 #
                %th.px-4.py-3.text-left.text-xs.font-semibold.text-slate-300.border-b.border-slate-700 Mã SV
                %th.px-4.py-3.text-left.text-xs.font-semibold.text-slate-300.border-b.border-slate-700 Họ tên
                %th.px-4.py-3.text-left.text-xs.font-semibold.text-slate-300.border-b.border-slate-700 Lớp
                %th.px-4.py-3.text-left.text-xs.font-semibold.text-slate-300.border-b.border-slate-700 Ngành
                %th.px-4.py-3.text-left.text-xs.font-semibold.text-slate-300.border-b.border-slate-700 Trạng thái
                %th.px-4.py-3.text-left.text-xs.font-semibold.text-slate-300.border-b.border-slate-700 Thao tác
            %tbody#table-body
              - @students.each_with_index do |s, index|
                - trang_thai = "Đang học" # TODO: map từ dữ liệu thực nếu có cột trạng thái
                - status_color = case trang_thai when "Đang học" then "text-emerald-400" when "Bảo lưu"  then "text-amber-400" else "text-red-400" end

                %tr{ class: "hover:bg-slate-700/30 transition" }
                  %td.px-4.py-3.text-sm.text-slate-400.border-b.border-slate-700
                    - if student.avatar.attached?
                      = image_tag student.avatar.variant(:thumb), class: "w-12 h-12 rounded object-cover"
                    - else
                      .w-12.h-12.bg-slate-700.rounded.flex.items-center.justify-center
                        %svg.w-6.h-6.text-slate-500{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
                          %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2, d: "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" }
                  %td.px-4.py-3.text-sm.text-slate-400.border-b.border-slate-700= index + 1
                  %td.px-4.py-3.text-sm.text-slate-200.border-b.border-slate-700.font-medium= s.ma_sv
                  %td.px-4.py-3.text-sm.text-slate-200.border-b.border-slate-700= s.ho_ten
                  %td.px-4.py-3.text-sm.text-slate-200.border-b.border-slate-700= s.lop&.ten
                  %td.px-4.py-3.text-sm.text-slate-200.border-b.border-slate-700= s.nganh&.ten_nganh
                  %td.px-4.py-3.text-sm.border-b.border-slate-700{ class: status_color }= trang_thai
                  %td.px-4.py-3.text-sm.border-b.border-slate-700
                    .flex.items-center.gap-2
                      = link_to student_path(s),
                                class: "focus-outline p-1.5 bg-blue-500/20 hover:bg-blue-500/30 text-blue-400 rounded transition",
                                title: "Xem chi tiết" do
                        %svg.w-4.h-4{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
                          %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                                 d: "M15 12a3 3 0 11-6 0 3 3 0 016 0z" }
                          %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                                 d: "M2.458 12C3.732 7.943 7.523 5 12 5c4.477 0 8.268 2.943 9.542 7-1.274 4.057-5.065 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" }

                      = link_to edit_student_path(s),
                                class: "focus-outline p-1.5 bg-emerald-500/20 hover:bg-emerald-500/30 text-emerald-400 rounded transition",
                                title: "Sửa" do
                        %svg.w-4.h-4{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
                          %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                                 d: "M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" }

                      = link_to student_path(s),
                                data: { turbo_method: :delete, turbo_confirm: "Bạn có chắc chắn muốn xoá học viên này?" },
                                class: "focus-outline p-1.5 bg-red-500/20 hover:bg-red-500/30 text-red-400 rounded transition",
                                title: "Xoá" do
                        %svg.w-4.h-4{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
                          %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                                 d: "M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" }
