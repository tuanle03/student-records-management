#screen-grade-subject-show.screen.w-full.h-full.bg-slate-900.flex.flex-col
  %header.bg-slate-800.border-b.border-slate-700.px-6.py-4
    .flex.items-center.justify-between
      .flex.items-center.gap-4
        = link_to grades_path, class: "focus-outline p-2 hover:bg-slate-700 rounded-lg transition" do
          %svg.w-6.h-6.text-slate-300{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
            %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                   d: "M10 19l-7-7m0 0l7-7m-7 7h18" }

        %div
          - subject_title = @subject&.ten.present? ? "#{@subject.ma_mon_hoc} – #{@subject.ten}" : (@subject&.ma_mon_hoc || "Bảng điểm")
          %h1.text-lg.font-bold.text-amber-300= subject_title
          %p.text-xs.text-slate-400
            Bảng điểm theo môn

      .flex.items-center.gap-2
        - if current_user.teacher? || current_user.staff?
          = link_to download_template_grades_path,
                    class: "focus-outline px-4 py-2 bg-slate-700 hover:bg-slate-600 text-slate-200 rounded-lg text-sm transition flex items-center gap-2" do
            %svg.w-5.h-5{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
              %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                     d: "M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M7 10l5 5m0 0l5-5m-5 5V4" }
            %span Tải mẫu

          = link_to import_grades_path(ma_mon_hoc: @subject&.ma_mon_hoc),
                    class: "focus-outline px-4 py-2 bg-emerald-400 hover:bg-emerald-300 text-slate-900 font-semibold rounded-lg transition flex items-center gap-2" do
            %svg.w-5.h-5{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
              %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                     d: "M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M12 12V4m0 8l-4-4m4 4l4-4" }
            %span Nhập điểm

          = link_to export_grades_path,
                    class: "focus-outline px-4 py-2 bg-amber-400 hover:bg-amber-300 text-slate-900 font-semibold rounded-lg transition flex items-center gap-2" do
            %svg.w-5.h-5{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
              %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                     d: "M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M12 4v12m0 0l4-4m-4 4l-4-4" }
            %span Xuất điểm

  %main.flex-1.overflow-auto.p-6
    .max-w-7xl.mx-auto
      - if flash[:notice]
        .mb-4{ class: "rounded-lg bg-emerald-50/5 border border-emerald-500/40 text-emerald-200 py-2 px-3 text-sm" }= flash[:notice]
      - if flash[:alert]
        .mb-4{ class: "rounded-lg bg-rose-50/5 border border-rose-500/40 text-rose-200 py-2 px-3 text-sm" }= flash[:alert]

      .bg-slate-800.border.border-slate-700.rounded-2xl.p-6.mb-6
        .flex.items-start.justify-between.gap-4
          %div
            %h2.text-xl.font-semibold.text-slate-100
              = @subject&.ten.present? ? @subject.ten : "Môn học"
            %p.text-sm.text-slate-400.mt-1
              = "Mã môn: #{@subject&.ma_mon_hoc}"
          %div.text-right
            %p.text-sm.text-slate-300 Tổng bản ghi
            %p.text-2xl.font-bold.text-amber-300= (@grades&.size || 0)

      - if @grades.present?
        .bg-slate-800.border.border-slate-700.rounded-2xl.overflow-hidden
          .overflow-x-auto.table-scroll
            %table.w-full
              %thead{ class: "bg-slate-900/80" }
                %tr
                  %th.px-4.py-3.text-left.text-xs.font-semibold.text-slate-300.border-b.border-slate-700 #
                  %th.px-4.py-3.text-left.text-xs.font-semibold.text-slate-300.border-b.border-slate-700 Mã SV
                  %th.px-4.py-3.text-left.text-xs.font-semibold.text-slate-300.border-b.border-slate-700 Họ đệm
                  %th.px-4.py-3.text-left.text-xs.font-semibold.text-slate-300.border-b.border-slate-700 Tên
                  %th.px-4.py-3.text-left.text-xs.font-semibold.text-slate-300.border-b.border-slate-700 Mã lớp
                  %th.px-4.py-3.text-left.text-xs.font-semibold.text-slate-300.border-b.border-slate-700 Học kỳ
                  %th.px-4.py-3.text-left.text-xs.font-semibold.text-slate-300.border-b.border-slate-700 Điểm GP
                  %th.px-4.py-3.text-left.text-xs.font-semibold.text-slate-300.border-b.border-slate-700 Điểm HP
                  %th.px-4.py-3.text-left.text-xs.font-semibold.text-slate-300.border-b.border-slate-700 Điểm TB
                  %th.px-4.py-3.text-left.text-xs.font-semibold.text-slate-300.border-b.border-slate-700 Thi lại 1
                  %th.px-4.py-3.text-left.text-xs.font-semibold.text-slate-300.border-b.border-slate-700 Thi lại 2

              %tbody
                - @grades.each_with_index do |g, index|
                  - s = g.hssv
                  %tr{ class: "hover:bg-slate-700/30 transition" }
                    %td.px-4.py-3.text-sm.text-slate-400.border-b.border-slate-700= index + 1
                    %td.px-4.py-3.text-sm.text-slate-200.border-b.border-slate-700.font-medium= g.ma_sv
                    %td.px-4.py-3.text-sm.text-slate-200.border-b.border-slate-700= s&.ho_dem
                    %td.px-4.py-3.text-sm.text-slate-200.border-b.border-slate-700= s&.ten
                    %td.px-4.py-3.text-sm.text-slate-200.border-b.border-slate-700= s&.ma_lop
                    %td.px-4.py-3.text-sm.text-slate-200.border-b.border-slate-700= g.ma_hoc_ky
                    %td.px-4.py-3.text-sm.text-slate-200.border-b.border-slate-700= g.diem_gp
                    %td.px-4.py-3.text-sm.text-slate-200.border-b.border-slate-700= g.diem_hp
                    %td.px-4.py-3.text-sm.text-amber-200.border-b.border-slate-700.font-semibold= g.tinh_diem_tb
                    %td.px-4.py-3.text-sm.text-slate-200.border-b.border-slate-700= g.diem_thi_lai_lan1
                    %td.px-4.py-3.text-sm.text-slate-200.border-b.border-slate-700= g.diem_thi_lai_lan2
      - else
        .bg-slate-800.border.border-slate-700.rounded-2xl.p-8.text-center
          -# %div.mx-auto.w-14.h-14.bg-amber-500/20.rounded-2xl.flex.items-center.justify-center.mb-4
          %div{ class: "mx-auto w-14 h-14 bg-gradient-to-tr from-amber-500/20 via-amber-500/10 to-amber-500/20 rounded-2xl flex items-center justify-center mb-4" }
            %svg.w-8.h-8.text-amber-400{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
              %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                     d: "M9 12h6m-6 4h6M7 4h10a2 2 0 012 2v14a2 2 0 01-2 2H7a2 2 0 01-2-2V6a2 2 0 012-2z" }
          %h3.text-lg.font-semibold.text-slate-100 Chưa có điểm cho môn này
          %p.text-sm.text-slate-400.mt-1
            Bạn có thể import file hoặc nhập điểm để bắt đầu.

          - if current_user.teacher? || current_user.staff?
            .mt-5.flex.items-center.justify-center.gap-2
              = link_to import_grades_path(ma_mon_hoc: @subject&.ma_mon_hoc),
                        class: "focus-outline px-4 py-2 bg-emerald-400 hover:bg-emerald-300 text-slate-900 font-semibold rounded-lg transition flex items-center gap-2" do
                %svg.w-5.h-5{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
                  %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                         d: "M4 16v2a2 2 0 002 2h12a2 2 0 002-2v-2M12 12V4m0 8l-4-4m4 4l4-4" }
                %span Nhập điểm
