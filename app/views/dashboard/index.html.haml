/ ==================== SCREEN 2: DASHBOARD ====================
#screen-dashboard.screen.active.w-full.h-full.bg-slate-900.flex.flex-col
  / Header
  %header.bg-slate-800.border-b.border-slate-700.px-6.py-4
    .flex.items-center.justify-between
      .flex.items-center.gap-4
        -# .w-10.h-10.bg-gradient-to-br.from-amber-400.to-amber-600.rounded-lg.flex.items-center.justify-center
        -#   %svg.w-6.h-6.text-slate-900{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
        -#     %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
        -#            d: "M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" }
        -# using logo.png
        %div{ class: "w-10 h-10 bg-gradient-to-br from-amber-400 to-amber-600 rounded-lg flex items-center justify-center" }
          %img{ src: "/logo.png", alt: "Logo", class: "w-6 h-6" }
        %div
          %h1#dashboard-title.text-lg.font-bold.text-amber-300
            Hệ thống quản lý học viên
          %p.text-xs.text-slate-400
            Dashboard tổng quan
      .flex.items-center.gap-3
        .text-right.mr-3
          %p#user-name.text-sm.font-medium.text-slate-200= @current_user_name || "Admin User"
          %p.text-xs.text-slate-400= @current_user_role
        = button_to "Đăng xuất",
                    destroy_user_session_path,
                    method: :delete,
                    class: "focus-outline px-4 py-2 bg-slate-700 hover:bg-slate-600 text-slate-200 rounded-lg text-sm transition"

  / Main Dashboard Content
  %main.flex-1.overflow-auto.p-6
    .max-w-7xl.mx-auto
      %h2.text-2xl.font-bold.text-slate-100.mb-6
        Tổng quan hệ thống

      / Stats Cards
      .grid.grid-cols-1.md:grid-cols-3.gap-6.mb-8
        -# .bg-gradient-to-br.from-blue-500/20.to-blue-600/20.border.border-blue-500/30.rounded-2xl.p-6
        %div{ class: "bg-gradient-to-br from-blue-500/20 to-blue-600/20 border border-blue-500/30 rounded-2xl p-6" }
          .flex.items-center.justify-between.mb-4
            -# .w-12.h-12.bg-blue-500/30.rounded-xl.flex.items-center.justify-center
            %div{ class: "w-12 h-12 bg-blue-500/30 rounded-xl flex items-center justify-center" }
              %svg.w-7.h-7.text-blue-300{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
                %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                       d: "M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" }
            %span#stat-students.text-3xl.font-bold.text-blue-300= @total_students
          %h3.text-sm.font-medium.text-blue-200.mb-1 Tổng học viên
          -# %p.text-xs.text-blue-300/70 Đang quản lý trong hệ thống
          %p.text-xs{ class: "text-blue-300/70" } Đang quản lý trong hệ thống

        -# .bg-gradient-to-br.from-emerald-500/20.to-emerald-600/20.border.border-emerald-500/30.rounded-2xl.p-6
        %div{ class: "bg-gradient-to-br from-emerald-500/20 to-emerald-600/20 border border-emerald-500/30 rounded-2xl p-6" }
          .flex.items-center.justify-between.mb-4
            -# .w-12.h-12.bg-emerald-500/30.rounded-xl.flex.items-center.justify-center
            %div{ class: "w-12 h-12 bg-emerald-500/30 rounded-xl flex items-center justify-center" }
              %svg.w-7.h-7.text-emerald-300{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
                %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                       d: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" }
            %span#stat-classes.text-3xl.font-bold.text-emerald-300= @total_classes
          %h3.text-sm.font-medium.text-emerald-200.mb-1 Lớp học
          -# %p.text-xs.text-emerald-300/70 Đang hoạt động
          %p.text-xs{ class: "text-emerald-300/70" } Đang hoạt động

        -# .bg-gradient-to-br.from-amber-500/20.to-amber-600/20.border.border-amber-500/30.rounded-2xl.p-6
        %div{ class: "bg-gradient-to-br from-amber-500/20 to-amber-600/20 border border-amber-500/30 rounded-2xl p-6" }
          .flex.items-center.justify-between.mb-4
            -# .w-12.h-12.bg-amber-500/30.rounded-xl.flex.items-center.justify-center
            %div{ class: "w-12 h-12 bg-amber-500/30 rounded-xl flex items-center justify-center" }
              %svg.w-7.h-7.text-amber-300{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
                %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                       d: "M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" }
            %span#stat-grades.text-3xl.font-bold.text-amber-300= @total_grades
          %h3.text-sm.font-medium.text-amber-200.mb-1 Bảng điểm
          -# %p.text-xs.text-amber-300/70 Đã cập nhật
          %p.text-xs{ class: "text-amber-300/70" } Đã cập nhật

      / Quick Actions
      .bg-slate-800.border.border-slate-700.rounded-2xl.p-6
        %h3.text-lg.font-semibold.text-slate-100.mb-4
          Truy cập nhanh
        .grid.grid-cols-1.md:grid-cols-3.gap-4
          = link_to students_path, class: "focus-outline group bg-slate-700/50 hover:bg-slate-700 border border-slate-600 hover:border-amber-500/50 rounded-xl p-4 text-left transition block" do
            .flex.items-center.gap-3.mb-2
              -# .w-10.h-10.bg-blue-500/20.group-hover:bg-blue-500/30.rounded-lg.flex.items-center.justify-center.transition
              %div{ class: "w-10 h-10 bg-blue-500/20 group-hover:bg-blue-500/30 rounded-lg flex items-center justify-center transition" }
                %svg.w-6.h-6.text-blue-400{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
                  %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                         d: "M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" }
              %h4.font-semibold.text-slate-200.group-hover:text-amber-300.transition
                Quản lý học viên
            %p.text-xs.text-slate-400
              Xem danh sách học viên, chi tiết hồ sơ

          = link_to lops_path, class: "focus-outline group bg-slate-700/50 hover:bg-slate-700 border border-slate-600 hover:border-amber-500/50 rounded-xl p-4 text-left transition block" do
            .flex.items-center.gap-3.mb-2
              -# .w-10.h-10.bg-emerald-500/20.group-hover:bg-emerald-500/30.rounded-lg.flex.items-center.justify-center.transition
              %div{ class: "w-10 h-10 bg-emerald-500/20 group-hover:bg-emerald-500/30 rounded-lg flex items-center justify-center transition" }
                %svg.w-6.h-6.text-emerald-400{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
                  %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                         d: "M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" }
              %h4.font-semibold.text-slate-200.group-hover:text-amber-300.transition
                Quản lý lớp học
            %p.text-xs.text-slate-400
              Quản lý thông tin lớp học

          = link_to grades_path,
                    class: "focus-outline group bg-slate-700/50 hover:bg-slate-700 border border-slate-600 hover:border-amber-500/50 rounded-xl p-4 text-left transition block" do
            .flex.items-center.gap-3.mb-2
              %div{ class: "w-10 h-10 bg-amber-500/20 group-hover:bg-amber-500/30 rounded-lg flex items-center justify-center transition" }
                %svg.w-6.h-6.text-amber-400{ fill: "none", stroke: "currentColor", viewBox: "0 0 24 24" }
                  %path{ "stroke-linecap": "round", "stroke-linejoin": "round", "stroke-width": 2,
                         d: "M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" }
              %h4.font-semibold.text-slate-200.group-hover:text-amber-300.transition
                Bảng điểm theo môn
            %p.text-xs.text-slate-400
              Xem bảng điểm của học viên theo từng môn
