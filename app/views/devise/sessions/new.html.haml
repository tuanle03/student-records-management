#screen-login.screen.w-full.h-full.bg-gradient-to-br.from-slate-900.via-slate-800.to-slate-900.flex.items-center.justify-center.p-4
  .w-full.max-w-lg
    %div{ class: "bg-slate-800/90 backdrop-blur-sm border-2 border-slate-700 rounded-3xl shadow-2xl shadow-slate-900/60 p-8" }
      / Logo Trường
      .flex.justify-center.mb-6
        %img{ src: "/logo.png", alt: "Logo Trường Đại Học", class: "w-20 h-20 rounded-2xl shadow-lg" }

      %h1#login-title.text-2xl.font-bold.text-center.text-blue-300.mb-2
        Hệ thống quản lý thông tin học viên
      %p#login-subtitle.text-sm.text-center.text-slate-400.mb-8
        Trường Đại Học An Ninh Nhân Dân

      = form_for(resource, as: resource_name, url: session_path(resource_name), html: { id: "login-form", class: "space-y-5" }) do |f|
        .field
          = f.label :email, "Tên đăng nhập", class: "block text-sm font-medium text-slate-300 mb-2"
          = f.email_field :email,
                          autofocus: true,
                          required: true,
                          class: "focus-outline w-full px-4 py-3 bg-slate-900/70 border border-slate-700 rounded-xl text-slate-100 placeholder-slate-500 focus:border-blue-400 transition",
                          placeholder: "Nhập email của bạn"

        .field
          = f.label :password, "Mật khẩu", class: "block text-sm font-medium text-slate-300 mb-2"
          = f.password_field :password,
                             required: true,
                             class: "focus-outline w-full px-4 py-3 bg-slate-900/70 border border-slate-700 rounded-xl text-slate-100 placeholder-slate-500 focus:border-blue-400 transition",
                             placeholder: "Nhập mật khẩu"

        .field
          - if devise_mapping.rememberable?
            = f.check_box :remember_me, class: "mr-2"
            = f.label :remember_me, "Ghi nhớ đăng nhập", class: "text-sm text-slate-300"

        .actions
          = f.submit "Đăng nhập",
                     class: "w-full py-3 bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white font-semibold rounded-xl shadow-lg transition focus:outline-none focus:ring-2 focus:ring-blue-500"

      - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
        .text-center.mt-6
          = link_to "Quên mật khẩu?", new_password_path(resource_name),
                    class: "text-blue-400 hover:text-blue-300 text-sm transition"
